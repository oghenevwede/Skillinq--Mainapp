
  {
    "compilerOptions": {
      "target": "ES2017",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "ignoreDeprecations": "6.0",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,  
      "plugins": [
        {
          "name": "next"
        }
      ],
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.js", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
  }
